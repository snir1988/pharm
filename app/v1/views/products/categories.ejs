<%- include('../partials/header') %> <!-- ✅ כולל את קובץ ה־header העליון (meta, CSS וכו') -->
<%- include('../partials/navbar') %> <!-- ✅ כולל את תפריט הניווט הראשי -->

<h1>All Categories</h1> <!-- 🔹 כותרת ראשית לעמוד הקטגוריות -->

<!-- ✅ אם אין קטגוריות בכלל -->
<% if (categories.length === 0) { %>
  <p>No categories found.</p> <!-- ❗ הודעה במידה ולא נמצאו קטגוריות -->
<% } else { %>
  <ul> <!-- ✅ רשימה של כל הקטגוריות -->
    <% categories.forEach(function(category) { %> <!-- 🔄 מעבר על כל קטגוריה -->
      <li>
        <strong>Name:</strong> <%= category.pname %><br> <!-- ✅ הצגת שם הקטגוריה -->
        
        <% if (category.picname) { %> <!-- 🔍 בדיקה אם יש תמונה לקטגוריה -->
          <img src="/images/<%= category.picname %>" alt="<%= category.pname %>" width="100"> <!-- ✅ הצגת תמונה של הקטגוריה -->
        <% } %>
      </li>
    <% }); %>
  </ul>
<% } %>

